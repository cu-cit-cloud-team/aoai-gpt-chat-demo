{
  "name": "Node/TypeScript/Next.js",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": {
      "NODE_VERSION": "22"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "git.enableCommitSigning": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontSize": 16,
        "terminal.integrated.lineHeight": 1.2,
        "terminal.integrated.fontWeight": "400",
        "terminal.integrated.copyOnSelection": true,
        "terminal.integrated.cursorBlinking": true,
        "terminal.integrated.fontFamily": "Operator Mono Lig, Dank Mono, Cascadia Code, Victor Mono, Fira Code",
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": "active"
      },
      "extensions": [
        "GitHub.copilot", // GitHub Copilot
        "GitHub.copilot-chat", // GitHub Copilot Chat
        "Atishay-Jain.All-Autocomplete", // All Autocomplete
        "steoates.autoimport", // Auto Import
        "mutantdino.resourcemonitor", // Resource Monitor
        "biomejs.biome", // Biome
        "ms-azuretools.vscode-docker", // Docker
        "mikestead.dotenv", // DotENV
        "mgmcdermott.vscode-language-babel", // Babel JavaScript
        "HookyQR.JSDocTagComplete", // JSDoc Code Completion
        "EditorConfig.EditorConfig", // EditorConfig
        "tamasfe.even-better-toml", // Even Better TOML
        "codezombiech.gitignore", // GitIgnore
        "wix.vscode-import-cost", // Import Cost
        "streetsidesoftware.code-spell-checker", // Code Spell Checker
        "liamhammett.inline-parameters", // Inline Parameters
        "ms-vscode.vscode-typescript-next", // Javascript/TypeScript Nightly
        "ms-vscode.js-debug-nightly", // JavaScript Debugger Nightly
        "Massi.javascript-docstrings", // JavaScript Docstrings
        "DavidAnson.vscode-markdownlint", // Markdown Lint
        "shd101wyy.markdown-preview-enhanced", // Markdown Preview Enhanced
        "quicktype.quicktype", // Paste JSON as code
        "ryu1kn.partial-diff", // Partial Diff
        "YoavBls.pretty-ts-errors", // Pretty TypeScript Errors
        "richie5um2.vscode-sort-json", // Sort JSON
        "pflannery.vscode-versionlens", // Version Lens
        "redhat.vscode-yaml", // YAML
        "dkundel.vscode-npm-source", // View repo for a Node module
        "jasonnutter.search-node-modules", // Search Node Modules
        "dbaeumer.vscode-eslint", // ESLint
        "Orta.vscode-jest", // Jest
        "esbenp.prettier-vscode", // prettier
        "million.million-lint" // Million Lint
      ]
    }
  },
  "forwardPorts": [3001],
  "onCreateCommand": "npm install --force"
}
